{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6", "dom"],
      "outDir": "./",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "moduleResolution": "node"
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
  }