{
    "version": 2,
    "buildCommand": "cd client && npm install && npm run build",
    "builds": [
      {
        "src": "api/src/server.ts",
        "use": "@vercel/node"
      },
      {
        "src": "client/build/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "api/src/server.ts"
      },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }